# アプリケーション設定
APP_NAME=Historical Travel Agent
DEBUG=true

# CORS設定
CORS_ORIGINS=["http://localhost:3000"]

# データベース設定
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/travel_agent

# Redis設定
REDIS_URL=redis://localhost:6379/0

# Google Cloud設定
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=asia-northeast1

# Google Cloud 認証（2つの方法から選択）
# 方法1（推奨）: Application Default Credentials (ADC)
#   gcloud auth application-default login
#   ↑ このコマンドでログイン後、下記の設定は不要（空欄のまま）
#
# 方法2: サービスアカウントキー
#   GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GOOGLE_APPLICATION_CREDENTIALS=

# Gemini AI設定
GEMINI_MODEL_NAME=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_OUTPUT_TOKENS=12288
GEMINI_TIMEOUT_SECONDS=60
GEMINI_THINKING_LEVEL=medium

# 画像生成実行モード
# local_worker: ローカル常駐worker（just dev-worker）で処理
# cloud_tasks: Cloud Tasks経由で処理
IMAGE_EXECUTION_MODE=local_worker

# Cloud Tasks設定（IMAGE_EXECUTION_MODE=cloud_tasks の場合に必須）
CLOUD_TASKS_LOCATION=asia-northeast1
CLOUD_TASKS_QUEUE_NAME=spot-image-generation
CLOUD_TASKS_SERVICE_ACCOUNT_EMAIL=
CLOUD_TASKS_DISPATCH_DEADLINE_SECONDS=1800
CLOUD_TASKS_MAX_RETRY_ATTEMPTS=10

# 任意: 固定のHTTPターゲットURLを使いたい場合のみ設定
# 未設定時はリクエストのbase URLから自動構築される
CLOUD_TASKS_TARGET_URL=

# ストレージ設定
STORAGE_TYPE=local  # "local" (ローカル開発) or "gcs" (本番環境)
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
# GCS設定（本番環境用、STORAGE_TYPE=gcsの場合のみ必要）
GCS_BUCKET_NAME=  # 例: your-project-id-travel-uploads
