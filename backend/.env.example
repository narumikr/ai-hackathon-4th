# アプリケーション設定
APP_NAME=Historical Travel Agent
DEBUG=true

# CORS設定
CORS_ORIGINS=["http://localhost:3000"]

# データベース設定
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/travel_agent

# Redis設定
REDIS_URL=redis://localhost:6379/0

# Google Cloud設定
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=asia-northeast1

# Google Cloud 認証（2つの方法から選択）
# 方法1（推奨）: Application Default Credentials (ADC)
#   gcloud auth application-default login
#   ↑ このコマンドでログイン後、下記の設定は不要（空欄のまま）
#
# 方法2: サービスアカウントキー
#   GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GOOGLE_APPLICATION_CREDENTIALS=

# Gemini AI設定
GEMINI_MODEL_NAME=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_OUTPUT_TOKENS=8192
GEMINI_TIMEOUT_SECONDS=60
GEMINI_THINKING_LEVEL=medium

# スポット画像生成ジョブ設定
IMAGE_GENERATION_JOB_LOCK_TIMEOUT_SECONDS=900

# ストレージ設定
STORAGE_TYPE=local  # "local" (ローカル開発) or "gcs" (本番環境)
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
# GCS設定（本番環境用、STORAGE_TYPE=gcsの場合のみ必要）
GCS_BUCKET_NAME=  # 例: your-project-id-travel-uploads
